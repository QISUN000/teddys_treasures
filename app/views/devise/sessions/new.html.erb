<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm my-5">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">Log in</h2>
          
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { class: 'form-control mb-3', autocomplete: "email" },
                        wrapper_html: { class: 'mb-3' },
                        label_html: { class: 'form-label' } %>
                        
              <%= f.input :password,
                        required: false,
                        input_html: { class: 'form-control', autocomplete: "current-password" },
                        wrapper_html: { class: 'mb-3' },
                        label_html: { class: 'form-label' } %>
              
              <div class="mb-3 form-check">
                <%= f.input :remember_me, as: :boolean, 
                            boolean_style: :inline,
                            input_html: { class: 'form-check-input' },
                            label_html: { class: 'form-check-label' } if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="form-actions d-grid mb-3">
              <%= f.button :submit, "Log in", class: 'btn btn-primary py-2' %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>