<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h2 class="h4 mb-0">Add New Address</h2>
        </div>
        <div class="card-body">
          <%= form_with model: [:profile, @address], local: true do |f| %>
            <% if @address.errors.any? %>
              <div class="alert alert-danger">
                <h6 class="alert-heading">Please fix the following errors:</h6>
                <ul class="mb-0">
                  <% @address.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :street, 'Address', class: 'form-label' %>
              <%= f.text_field :street, class: 'form-control', required: true %>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :city, class: 'form-label' %>
                <%= f.text_field :city, class: 'form-control', required: true %>
              </div>
              <div class="col-md-6">
                <%= f.label :postal_code, 'Postal Code', class: 'form-label' %>
                <%= f.text_field :postal_code, class: 'form-control', required: true %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :province_id, 'Province', class: 'form-label' %>
              <%= f.collection_select :province_id, Province.all, :id, :name, {}, class: 'form-select', required: true %>
            </div>

            <div class="mb-3 form-check">
              <%= f.check_box :is_default, class: 'form-check-input' %>
              <%= f.label :is_default, 'Make this my default address', class: 'form-check-label' %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to 'Cancel', profile_path, class: 'btn btn-outline-secondary' %>
              <%= f.submit 'Save Address', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>