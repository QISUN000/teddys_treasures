<!DOCTYPE html>
<html>
  <head>
    <title>Teddy's Treasures</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
  </head>

  <body>
    <header class="py-3">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-4">
            <nav class="main-nav">
              <ul class="list-unstyled d-flex mb-0">
                <li class="me-4"><%= link_to 'Catalog', products_path, class: 'text-decoration-none text-uppercase' %></li>
                <li><%= link_to 'About', '/about', class: 'text-decoration-none text-uppercase' %></li>
              </ul>
            </nav>
          </div>
          
          <div class="col-md-4 text-center">
            <div class="logo">
              <%= link_to root_path, class: 'text-decoration-none text-dark' do %>
                <div class="fs-4 text-uppercase fw-bold lh-sm">TEDDY'S<br>
                <span class="fs-6 fst-italic text-capitalize">treasures</span></div>
              <% end %>
            </div>
          </div>
          
          <div class="col-md-4">
              <div class="user-actions">
  <ul class="list-unstyled d-flex justify-content-end mb-0">
    <% if user_signed_in? %>
      <li class="me-3"><%= link_to 'My orders', orders_path, class: 'text-decoration-none text-uppercase' %></li>
      <li class="me-3"><%= link_to 'My profile', profile_path, class: 'text-decoration-none text-uppercase' %></li>
      <li class="me-3">
        <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-link text-decoration-none text-uppercase p-0 m-0 border-0' %>
      </li>
    <% else %>
      <li class="me-3"><%= link_to 'Sign Up', new_user_registration_path, class: 'text-decoration-none text-uppercase' %></li>
      <li class="me-3"><%= link_to 'Login', new_user_session_path, class: 'text-decoration-none text-uppercase' %></li>
    <% end %>
    <li><%= link_to "Cart (#{cart_count})", cart_path, class: 'text-decoration-none text-uppercase' %></li>
  </ul>
</div>
          </div>
          
        </div>
      </div>
    </header>

    <% if notice || alert %>
      <div class="container my-3">
        <% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
        <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
      </div>
    <% end %>

    <main>
      <% unless current_page?(root_path) %>
        <%= yield %>
      <% else %>
        <!-- Hero Section -->
        <section class="hero position-relative" style="background-image: linear-gradient(rgba(30, 41, 64, 0.6), rgba(30, 41, 64, 0.6)), url(<%= asset_path 'hero-image.jpg' %>); background-size: cover; background-position: center; height: 600px;">
          <div class="container h-100">
            <div class="row h-100 align-items-center">
              <div class="col-md-6">
                <div class="text-white">
                  <p class="text-uppercase mb-2 letter-spacing-2">Premium Pet Accessories</p>
                  <h1 class="display-4 fw-bold mb-4">Your Pet Deserves The Best</h1>
                  <%= link_to 'Shop Catalog', products_path, class: 'btn btn-outline-light px-4 py-2 text-uppercase' %>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Categories Section -->
        <section class="py-5">
          <div class="container">
            <h2 class="text-center text-uppercase mb-5">Categories</h2>
            <div class="row g-4">
              <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                  <%= link_to category_products_path(@categories.find_by(name: 'Collars')), class: 'text-decoration-none' do %>
                    <img src="<%= asset_path 'category-collars.jpg' %>" class="card-img-top" alt="Pet Collars" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                      <h3 class="card-title h5 text-uppercase">Collars</h3>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                  <%= link_to category_products_path(@categories.find_by(name: 'Harnesses')), class: 'text-decoration-none' do %>
                    <img src="<%= asset_path 'category-harnesses.jpg' %>" class="card-img-top" alt="Pet Harnesses" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                      <h3 class="card-title h5 text-uppercase">Harnesses</h3>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                  <%= link_to category_products_path(@categories.find_by(name: 'Leashes')), class: 'text-decoration-none' do %>
                    <img src="<%= asset_path 'category-leashes.jpg' %>" class="card-img-top" alt="Pet Leashes" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                      <h3 class="card-title h5 text-uppercase">Leashes</h3>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm">
                  <%= link_to category_products_path(@categories.find_by(name: 'Beds')), class: 'text-decoration-none' do %>
                    <img src="<%= asset_path 'category-beds.jpg' %>" class="card-img-top" alt="Pet Beds" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                      <h3 class="card-title h5 text-uppercase">Beds</h3>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Tagline Section -->
        <section class="py-5 bg-dark text-white">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8 text-center">
                <h2 class="h3">Let your pet be as stylish as you are</h2>
              </div>
            </div>
          </div>
        </section>

        <!-- FAQ Section -->
        <section class="py-5">
          <div class="container">
            <h2 class="text-center text-uppercase mb-5">FAQ</h2>
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="accordion" id="faqAccordion">
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        How do I determine the right size for the product?
                      </button>
                    </h3>
                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                      <div class="accordion-body">
                        <p>We provide detailed size guides for each product to help you choose the correct size. Also, each product description includes specific recommendations for accurate measurement.</p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        Where are Teddy's Treasures products made?
                      </button>
                    </h3>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                      <div class="accordion-body">
                        <p>All our products are handcrafted by skilled artisans using premium quality materials sourced responsibly.</p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                        How to care for the products?
                      </button>
                    </h3>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                      <div class="accordion-body">
                        <p>Each product comes with specific care instructions. Generally, most items can be hand washed with mild soap and air dried.</p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                        What's the difference between a harness and a collar?
                      </button>
                    </h3>
                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                      <div class="accordion-body">
                        <p>Collars fit around your pet's neck, while harnesses wrap around the chest and torso. Harnesses distribute pressure more evenly and are recommended for small breeds or dogs that pull.</p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5">
                        Can I return or exchange an item if it doesn't fit?
                      </button>
                    </h3>
                    <div id="faq5" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                      <div class="accordion-body">
                        <p>Yes, we offer a 30-day return policy for unworn items. Please refer to our Returns page for detailed information.</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Instagram Section -->
        <section class="py-5 bg-light">
          <div class="container">
            <h2 class="text-center text-uppercase mb-2">Instagram</h2>
            <p class="text-center mb-4">@TEDDYSTREASURES</p>
            <div class="row g-3">
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-1.jpg' %>" class="img-fluid rounded" alt="Instagram photo 1">
              </div>
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-2.jpg' %>" class="img-fluid rounded" alt="Instagram photo 2">
              </div>
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-3.jpg' %>" class="img-fluid rounded" alt="Instagram photo 3">
              </div>
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-4.jpg' %>" class="img-fluid rounded" alt="Instagram photo 4">
              </div>
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-5.jpg' %>" class="img-fluid rounded" alt="Instagram photo 5">
              </div>
              <div class="col-6 col-md-4 col-lg-2">
                <img src="<%= asset_path 'instagram-6.jpg' %>" class="img-fluid rounded" alt="Instagram photo 6">
              </div>
            </div>
          </div>
        </section>
      <% end %>
    </main>

    <footer class="bg-dark text-white py-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="mb-3">
              <div class="fs-5 text-uppercase fw-bold lh-sm">TEDDY'S<br><span class="fs-6 fst-italic text-capitalize">treasures</span></div>
            </div>
            <p class="mb-1">teddystreasures@gmail.com</p>
            <p>+1 (204) 555-5555</p>
            <div class="mt-3">
              <a href="#" class="text-white me-3">Facebook</a>
              <a href="#" class="text-white me-3">Instagram</a>
              <a href="#" class="text-white">Twitter</a>
            </div>
          </div>
          
          <div class="col-lg-8">
            <div class="row">
              <div class="col-md-4 mb-4 mb-md-0">
                <h3 class="h6 text-uppercase mb-3">Catalog</h3>
                <ul class="list-unstyled">
                  <% @categories.each do |category| %>
                    <li class="mb-2"><%= link_to category.name, category_products_path(category), class: 'text-white text-decoration-none' %></li>
                  <% end %>
                </ul>
              </div>
              
              <div class="col-md-4 mb-4 mb-md-0">
                <h3 class="h6 text-uppercase mb-3">Customers</h3>
                <ul class="list-unstyled">
                  <li class="mb-2"><%= link_to 'Payment', '#', class: 'text-white text-decoration-none' %></li>
                  <li class="mb-2"><%= link_to 'Shipping', '#', class: 'text-white text-decoration-none' %></li>
                  <li class="mb-2"><%= link_to 'Returns', '#', class: 'text-white text-decoration-none' %></li>
                </ul>
              </div>
              
              <div class="col-md-4">
                <h3 class="h6 text-uppercase mb-3">Documents</h3>
                <ul class="list-unstyled">
                  <li class="mb-2"><%= link_to 'Privacy Policy', '#', class: 'text-white text-decoration-none' %></li>
                  <li class="mb-2"><%= link_to 'Terms & Conditions', '#', class: 'text-white text-decoration-none' %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4 pt-3 border-top border-secondary">
          <p class="small mb-0">© <%= Date.today.year %> Teddy's Treasures. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>