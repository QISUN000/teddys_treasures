<header class="py-3">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-4">
        <nav class="main-nav">
          <ul class="list-unstyled d-flex mb-0">
            <li class="me-4"><%= link_to 'Catalog', products_path, class: 'text-decoration-none text-uppercase' %></li>
            <li><%= link_to 'About', '/about', class: 'text-decoration-none text-uppercase' %></li>
            <li><%= link_to 'Contact', '/contact', class: 'text-decoration-none text-uppercase' %></li>
          </ul>
        </nav>
      </div>
      
      <div class="col-md-4 text-center">
        <div class="logo">
          <%= link_to root_path, class: 'text-decoration-none text-dark' do %>
            <div class="fs-4 text-uppercase fw-bold lh-sm">TEDDY'S<br>
            <span class="fs-6 fst-italic text-capitalize">treasures</span></div>
          <% end %>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="user-actions">
          <ul class="list-unstyled d-flex justify-content-end mb-0">
            <% if user_signed_in? %>
              <li class="me-3"><%= link_to 'My orders', orders_path, class: 'text-decoration-none text-uppercase' %></li>
              <li class="me-3"><%= link_to 'My profile', profile_path, class: 'text-decoration-none text-uppercase' %></li>
              <li class="me-3">
                <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-link text-decoration-none text-uppercase p-0 m-0 border-0' %>
              </li>
            <% else %>
              <li class="me-3"><%= link_to 'Sign Up', new_user_registration_path, class: 'text-decoration-none text-uppercase' %></li>
              <li class="me-3"><%= link_to 'Login', new_user_session_path, class: 'text-decoration-none text-uppercase' %></li>
            <% end %>
            <li><%= link_to "Cart (#{cart_count})", cart_path, class: 'text-decoration-none text-uppercase' %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<% if notice || alert %>
  <div class="container my-3">
    <% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
    <% if alert %><div class="alert alert-danger"><%= alert %></div><% end %>
  </div>
<% end %>