<div class="catalog-page">
  <h1 class="page-title">CATALOG</h1>
  
  <div class="category-tabs">
    <ul>
      <li class="<%= params[:id].blank? && params[:category_id].blank? ? 'active' : '' %>">
        <%= link_to 'ALL PRODUCTS', products_path %>
      </li>
      <% @categories.each do |category| %>
        <li class="<%= (params[:id].to_i == category.id || params[:category_id].to_i == category.id) ? 'active' : '' %>">
          <%= link_to category.name.upcase, category_products_path(category) %>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= link_to product_path(product) do %>
          <% if product.images.attached? %>
            <%= image_tag product.images.first, alt: product.name %>
          <% end %>
          <h3><%= product.name %></h3>
          <p class="price"><%= number_to_currency(product.price/100.0) %></p>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if @products.total_pages > 1 %>
    <div class="pagination">
      <%= paginate @products %>
    </div>
  <% end %>
</div>