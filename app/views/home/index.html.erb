<section class="hero">
  <div class="hero-content">
    <p class="hero-subtitle">Premium Pet Accessories</p>
    <h1 class="hero-title">YOUR PET DESERVES THE BEST</h1>
    <%= link_to 'View Catalog', products_path, class: 'btn-primary' %>
  </div>
</section>

<section class="categories">
  <h2 class="section-title">CATEGORIES</h2>
  <div class="categories-grid">
    <% @categories.each do |category| %>
      <div class="category-card">
        <%= link_to category_products_path(category) do %>
          <% if category.image.attached? %>
            <%= image_tag category.image, alt: category.name %>
          <% end %>
          <h3><%= category.name %></h3>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<section class="tagline">
  <h2>Let your pet be as stylish as you are</h2>
</section>

<section class="faq">
  <h2 class="section-title">FAQ</h2>
  <div class="faq-container">
    <div class="faq-item">
      <div class="faq-question">
        <h3>How do I determine the right size for my pet?</h3>
        <span class="toggle">+</span>
      </div>
      <div class="faq-answer">
        <p>Measure your pet's neck or chest circumference depending on the product type. Each size has a specified measurement range.</p>
      </div>
    </div>
    <div class="faq-item">
      <div class="faq-question">
        <h3>Where are Teddy's Treasures products made?</h3>
        <span class="toggle">+</span>
      </div>
      <div class="faq-answer">
        <p>All our products are designed and manufactured in Winnipeg, Manitoba.</p>
      </div>
    </div>
    <div class="faq-item">
      <div class="faq-question">
        <h3>Can I return or exchange an item if it doesn't fit?</h3>
        <span class="toggle">+</span>
      </div>
      <div class="faq-answer">
        <p>Yes, we accept returns within 14 days of receiving your order, provided the item hasn't been used and is in its original packaging.</p>
      </div>
    </div>
  </div>
</section>

<section class="instagram">
  <h2 class="section-title">INSTAGRAM</h2>
  <p>@TEDDYSTREASURES</p>
  <div class="instagram-grid">
    <!-- Instagram images will go here -->
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      question.addEventListener('click', () => {
        item.classList.toggle('active');
        const toggle = item.querySelector('.toggle');
        toggle.textContent = item.classList.contains('active') ? '-' : '+';
      });
    });
  });
</script>